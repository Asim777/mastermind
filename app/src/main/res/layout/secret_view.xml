<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/secret_view_peg_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/secret_view_peg_content_description"
        android:src="@drawable/ic_empty_peg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/secret_view_peg_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/secret_view_peg_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/secret_view_peg_content_description"
        android:src="@drawable/ic_empty_peg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/secret_view_peg_3"
        app:layout_constraintStart_toEndOf="@id/secret_view_peg_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/secret_view_peg_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/secret_view_peg_content_description"
        android:src="@drawable/ic_empty_peg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/secret_view_peg_4"
        app:layout_constraintStart_toEndOf="@id/secret_view_peg_2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/secret_view_peg_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/secret_view_peg_content_description"
        android:src="@drawable/ic_empty_peg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/secret_view_peg_3"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>