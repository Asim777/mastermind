<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:id="@+id/palette_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/peg_palette_blue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:contentDescription="@string/secret_view_peg_content_description"
            android:focusable="true"
            android:src="@drawable/ic_blue_peg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/peg_palette_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/peg_palette_green"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:contentDescription="@string/secret_view_peg_content_description"
            android:focusable="true"
            android:src="@drawable/ic_green_peg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/peg_palette_blue"
            app:layout_constraintStart_toEndOf="@id/peg_palette_yellow"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/peg_palette_yellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:contentDescription="@string/secret_view_peg_content_description"
            android:focusable="true"
            android:src="@drawable/ic_yellow_peg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/peg_palette_red"
            app:layout_constraintStart_toEndOf="@id/peg_palette_green"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/peg_palette_red"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:contentDescription="@string/secret_view_peg_content_description"
            android:focusable="true"
            android:src="@drawable/ic_red_peg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/peg_palette_white"
            app:layout_constraintStart_toEndOf="@id/peg_palette_yellow"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/peg_palette_white"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:contentDescription="@string/secret_view_peg_content_description"
            android:focusable="true"
            android:src="@drawable/ic_white_peg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/peg_palette_black"
            app:layout_constraintStart_toEndOf="@id/peg_palette_red"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/peg_palette_black"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:contentDescription="@string/secret_view_peg_content_description"
            android:focusable="true"
            android:src="@drawable/ic_black_peg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/peg_palette_pink"
            app:layout_constraintStart_toEndOf="@id/peg_palette_white"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/peg_palette_pink"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:contentDescription="@string/secret_view_peg_content_description"
            android:focusable="true"
            android:src="@drawable/ic_pink_peg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/peg_palette_black"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <Button
        android:id="@+id/palette_action_button"
        android:text="@string/check_button_text"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:enabled="false"
        android:background="@color/grey"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/palette_colors"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>